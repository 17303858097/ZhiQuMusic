<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:background="#282138"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FindFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/find_et_search"
            android:hint="@string/find_et_search"
            android:layout_width="0dp"
            android:paddingStart="@dimen/dp_20"
            android:textColor="#E3E3E3"
            android:textColorHint="#E3E3E3"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/find_et_shape"
            android:layout_weight="2"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_20"
            android:drawableEnd="@drawable/ic_search_black_24dp"
            android:inputType="text" />
        <ImageView
            android:id="@+id/find_iv_lyz"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_weight="1"
            android:src="@mipmap/img_receive_yz"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/todo" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试"
        android:id="@+id/bt"
        />
    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        app:tabIndicatorFullWidth="false"
        app:tabMode="scrollable"
        app:tabIndicatorColor="#CB3E9E"
        app:tabSelectedTextColor="#ffffff"
        android:background="#282138"
        app:tabTextColor="#EDEDED"
        android:id="@+id/find_tab"
        />

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/find_vp"
        />

</LinearLayout>