<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10">

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/videodata_iv"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_90" />

    <TextView
        android:id="@+id/videodata_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@id/videodata_iv"
        android:textColor="#000000"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/videodata_tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_toRightOf="@id/videodata_iv"
        android:layout_below="@id/videodata_tv_name"
        android:textColor="#6E000000"
        android:textSize="@dimen/sp_10" />

    <TextView
        android:id="@+id/videodata_tv_video_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_below="@id/videodata_tv_description"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_toRightOf="@id/videodata_iv"
        android:textColor="#6E000000"
        android:textSize="@dimen/sp_10" />


</RelativeLayout>